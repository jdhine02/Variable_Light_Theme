{
    "BlockType": "stack",
    "Witdh": "*",
    "Orientation": "Vertical",
    "Items": [
        {
            "BlockType": "dock",
            "Orientation": "Horizontal",
            "BackgroundImage": "images/Modern/rowbg.png",
            "Padding": "5, 25, 20, 5",
            "Width": 650,
            "Height": 160,
            "MarginTop": 5,
            "MarginBottom": 5,
            "Items": [
                //left
                {
                    "BlockType": "stack",
                    "Width": 140,
                    "Height": 160,
                    "Orientation": "Vertical",
                    "Margin": "10,6,20,20",
                    "Items": [
                        {
                            "BlockType": "text",
                            "MarginBottom": 5,
                            "Foreground": "{GoldText}",
                            "FontName": "{FontNameDefault}",
                            "FontSize": 15,
                            "Source": "{Item.DateLocal, Converter=DateToTime}",
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Center",
                            "Triggers": [
                                {
                                    "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=Completed}",
                                    "Property": "Foreground",
                                    "Value": "{DNFText}"
                                }
                            ]
                        },
                        {
                            "BlockType": "text",
                            "Foreground": "{BlackText}",
                            "FontName": "{FontNameDefault}",
                            "FontSize": 30,
                            "Source": "{Item.DateLocal, Converter=DateToDayOfMonth}",
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Center",
                            "Triggers": [
                                {
                                    "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=Completed}",
                                    "Property": "Foreground",
                                    "Value": "{DNFText}"
                                },
                            ]
                        },
                        {
                            "BlockType": "dock",
                            "Orientation": "Horizontal",
                            "VerticalAlignment": "Top",
                            "Width": "*",
                            "Items": [
                                {
                                    "BlockType": "stack",
                                    "RenderIf": "{ShowCountryFlagsIconInCalendar}",
                                    "Items": [
                                        { //flags : https://www.freeflagicons.com/buy/round_icon/
                                            "BlockType": "image",
                                            "MarginTop": 5,
                                            "MarginLeft": 23,
                                            "Width": 29,
                                            "Height": 29,
                                            "Opacity": 75,
                                            "Source": "images/Modern/Flags/{Item.Track.CountryName}.png"
                                        }
                                    ]
                                },
                                {
                                    "BlockType": "text",
                                    "Foreground": "{DNFText}",
                                    "FontName": "{FontNameDefault}",
                                    "FontSize": 23,
                                    "MarginTop": 5,
                                    "Triggers": [
                                        {
                                            "Condition": "{ShowCountryFlagsIconInCalendar}",
                                            "Property": "MarginLeft",
                                            "Value": "10"
                                        }
                                    ],
                                    "HorizontalAlignment": "Center",
                                    "Source": "[{Item.DateLocal, Converter=DateToMonthInWords}]"
                                },
                            ]
                        },
                        {
                            "BlockType": "itemstack",
                            "Orientation": "Horizontal",
                            "HorizontalAlignment": "Center",
                            "MarginTop": 10,
                            "ItemStackOptions": {
                                "ItemSource": "{Item.Races}",
                                "Template": {
                                    "BlockType": "text",
                                    "Source": "[{Item.RaceType}]",
                                    "HorizontalAlignment": "Center",
                                    "Foreground": "{GoldText}",
                                    "FontName": "{FontNameDefault}",
                                    "FontSize": 17,
                                    "RenderIf": "{Item.RaceType, converter=StringEquals, parameter=Sprint}",
                                    "Triggers": [
                                        {
                                            "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=Completed}",
                                            "Property": "Foreground",
                                            "Value": "{DNFText}"
                                        }
                                    ]
                                },
                            },
                        },
                        {
                            "BlockType": "text",
                            "Foreground": "{GoldText}",
                            "FontName": "{FontNameDefault}",
                            "FontSize": 17,
                            "MarginTop": 5,
                            "HorizontalAlignment":"Center",
                            "Source": "{Item.Description}",
                            "TextOptions" : 
                            {
                                "Wrap" : true
                            },
                            "Triggers": [
                                {
                                    "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=Completed}",
                                    "Property": "Foreground",
                                    "Value": "{DNFText}"
                                }
                            ]

                        },
                    ]
                },
                //Center
                {
                    "BlockType": "stack",
                    "Width": "*",
                    "Height": 160,
                    "Orientation": "Vertical",
                    "MarginLeft": -6,
                    "Items": [
                        {
                            "BlockType": "dock",
                            "Orientation": "Horizontal",
                            "VerticalAlignment": "Top",
                            "Width": "*",
                            "Items": [
                                {
                                    "BlockType": "text",
                                    "Foreground": "{GoldText}",
                                    "FontName": "{FontNameDefault}",
                                    "VerticalAlignment": "Top",
                                    "FontSize": 17,
                                    "Source": "[ROUND] {Item.Position}",
                                    "Triggers": [
                                        {
                                            "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=Completed}",
                                            "Property": "Foreground",
                                            "Value": "{DNFText}"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "BlockType": "text",
                            "Foreground": "{BlackText}",
                            "HorizontalAlignment": "Left",
                            "FontName": "{FontNameBold}",
                            "MarginTop": 10,
                            "FontSize": 22,
                            "Width": "*",
                            "Source": "[{Item.Track.CircuitName, converter=StringToUpperString} GRAND PRIX]",
                            "TextOptions" : 
                            {
                                "Wrap" : true
                            },
                            "Triggers": [
                                {
                                    "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=Completed}",
                                    "Property": "Foreground",
                                    "Value": "{DNFText}"
                                }
                            ]
                        },
                        {
                            "BlockType": "text",
                            "Foreground": "{DNFText}",
                            "HorizontalAlignment": "Left",
                            "FontName": "{FontNameDefault}",
                            "MarginTop": 10,
                            "FontSize": 16,
                            "Width": "*",
                            "TextOptions" : 
                            {
                                "Wrap" : false
                            },
                            "Source": "{Item.Track.CircuitFullName, converter=StringToUpperString}",
                            "Triggers": [
                                {
                                    "Condition": "{Item.CompletedStatus, Converter=StringEquals, Parameter=Completed}",
                                    "Property": "Foreground",
                                    "Value": "{DNFText}"
                                }
                            ]

                        },
                        {
                            "BlockType": "dock",
                            "Orientation": "Horizontal",
                            "Items": [
                                //country
                                //{
                                    //"BlockType": "text",
                                    //"Source": "[{Item.Track.CountryName}]",
                                    //"HorizontalAlignment": "Left",
                                    //"FontName": "{FontNameDefault}",
                                    //"Foreground": "{DNFText}",
                                    //"MarginTop": 14,
                                    //"FontSize": 16
                                //},
                                //winner
                                {
                                    "BlockType": "stack",
                                    "RenderIf": "{ShowWinnerInCalendar}",
                                    "VerticalAlignement": "Top",
                                    "MarginRight": 0,
                                    "Items": [
                                        //{
                                            //"BlockType": "image",
                                            //"HorizontalAlignment": "Right",
                                           // "MarginTop": -5,
                                           // "Width": 100,
                                            //"Height": 100,
                                            //"Source": "images/suit/{Item.WinnerString}.png"
                                        //},
                                        {
                                            "BlockType": "text",
                                            "RenderIf": "{ShowWinnerInCalendar}",
                                            "MarginLeft": 0,
                                            "Source": "WINNER: ",
                                            "HorizontalAlignment": "Right",
                                            "FontName": "{FontNameDefault}",
                                            "Foreground": "{GoldText}",
                                            "MarginTop": 10,
                                            "FontSize": 16,
                                            "RenderIf": "{Item.CompletedStatus, Converter=StringEquals, Parameter=Completed}",
                                        },
                                        {
                                            "BlockType": "text",
                                            "RenderIf": "{ShowWinnerInCalendar}",
                                            "MarginLeft": 0,
                                            "Source": " {Item.WinnerString}",
                                            "HorizontalAlignment": "Right",
                                            "FontName": "{FontNameDefault}",
                                            "Foreground": "{BlackText}",
                                            "MarginTop": 10,
                                            "FontSize": 16
                                        }
                                    ]
                                }
                                
                            ]
                        }
                    ]
                },
                //Right
                {
                    "BlockType": "stack",
                    "RenderIf": "{ShowTrackIconInCalendar}",
                    "Width": 100,
                    "Height": 160,
                    "Orientation": "Vertical",
                    "VerticalAlignement": "Center",
                    "MarginRight": 10,
                    "Items": [
                        {
                            "BlockType": "image",
                            "MarginTop": 20,
                            "Width": 100,
                            "Height": 100,
                            "Opacity": 20,
                            "Source": "images/Modern/Track/{Item.Track.CircuitName}.png"
                        }
                    ]
                },
            ]
        }
    ]
}