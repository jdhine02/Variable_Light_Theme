        { //battles pos and vs
        "BlockType" : "stack",
        "RenderIf" : false,
        "Background": "#ffffff",
        "Width" : 55,
        "Height" : "*",
        "Triggers" : [
            {
                "Condition" : "<{data.Type, Converter=EnumEquals, Parameter=DriverCompact}>",
                "Setters":
                [                        
                    {
                        "Property" : "RenderIf",
                        "Value" : true
                    }
                ]                
            },
            {
                "Condition" : "<battle2>",
                "Setters" : [
                    {
                        "Property" : "BackgroundImage",
                        "Value" : "images/stats/battles/bg_vs.png"
                    }
                ]
                
            }
        ],
