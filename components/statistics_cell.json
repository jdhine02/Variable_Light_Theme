            "RenderIf" : false,
            "Width" : "*",
            "Height" : "*",
            "Source" : "<{data.Value}>",
            "Padding": "12, 0",
            "Background": "{#FFFFFF}",
            "VerticalAlignment" : "Center",                  
            "TextOptions" :
            {
                "FontName": "{FontNameDefault}",
                "FontSize": 30,
                "HorizontalAlignment": "Center",
                "ColorizeRating" : 
                {
                    "IsEnabled" : true,
                    "Level" : "<{data.Level}>",
                    "GradientStops" : [
                        {
                            "Color" : "{AstonMartinPrimary}",
                            "Offset" : 100
                        },
                        {
                            "Color" : "#ebe834",
                            "Offset" : 50
                        },
                        {
