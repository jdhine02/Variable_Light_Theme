        {
            "BlockType": "itemstack",
            "Width" : "*",
            "Height" : "*",
            "Spacing": 4,
            "Padding": "12, 0",
            "Background": "{#FFFFFF}",
            "ItemStackOptions": {
                "ItemSource": "<{data.Stints}>",
                "Template": {
                    "BlockType": "stack",
                    "VerticalAlignment": "Center",
                    "MarginRight" : 4,
                    "Spacing": 3,
                    "Items": [
                        {
                            "BlockType": "image",
                            "Height": 36,
                            "VerticalAlignment": "Center",
                            "Source": "tyres_{Item.Tyres}.png"
                        },
                        {
                            "BlockType": "text",
                            "Source": "{Item.Laps}",
                            "HorizontalAlignment": "Center",
                            "VerticalAlignment": "Center",
                            "TextOptions": {
                                "FontName": "{FontNameDefault}",
                                "FontSize": 18,
                                "HorizontalAlignment": "Center",
                                "Foreground": "{BlackText}"
                            }
                            ,
                            "Triggers" : [
                                {
                                    "Condition" : "{Item.IsPercentage}",
                                    "Setters":
                                    [                        
                                        {
                                            "Property" : "Source",
                                            "Value" : "{Item.Percentage, Converter=StringAdd, Parameter=%}"
                                        }
                                    ]                
                                }                 
                            ]      
                        }
                        
                    ]
                }
            }
        },

        //tyres
        {
            "BlockType": "stack",
            "Padding" : "12,0",
            "RenderIf" : false,
            "Width" : "*",
            "Height" : "*",            
            "Source": "<{data.Tyres, Converter=StringFormatReverse, Parameter=tyres_SUB.png}>",
            "VerticalAlignment" : "Center",
            "HorizontalAlignment": "Center",
            "Background": "{#FFFFFF}", 
            "Triggers" : [
                {
                    "Condition" : "<{data.Type, Converter=EnumEquals, Parameter=Tyres}>",
