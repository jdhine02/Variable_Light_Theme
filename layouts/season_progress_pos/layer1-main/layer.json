{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType": "component",
                "ComponentName": "header_block_race_progress",
            },

            //separator
            {
                "Name": "separator",
                "BlockType": "image",
                "MarginTop": 16,
                "MarginLeft": 4,
                "MarginRight": 4,
                "MarginBottom": 24,
                "Width": "*",
                "Source": "separator.png"
            },

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "{MarginTable}",
                "TableOptions": {
                    "ItemsSource": "{Standings.Drivers}",
                    "RowSpacing": 16,
                    "ColSpacing": 8,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "FontSize": 16,
                        "TextOptionsExtern": "tableColumnHeader"
                    },
                    "Columns": [
                        //position
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "position_cell",
                                "ComponentOptions": {
                                    "Vars": {
                                        "position": "{Item.Position}"
                                    }
                                }
                            }
                        },

                        //driver line
                        {
                            "Header": "",
                            "MarginRight" : 24,
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "driver_line_cell"
                            }
                        },

                        //points
                        {
                            "Header": "Points",
                            "MarginLeft" : 20,
                            "Template": {
                                
                                "BlockType": "dock",
                                "PaddingLeft" : 24,
                                "PaddingRight" : 24,
                                "Background": "{BackgroundDefault}",
                                "ColorizeBackground": {
                                    "Enabled": true,
                                    "Color": "#D4AF37",
                                    "BlendPercentage": 50
                                },                                                       
                                "Items": [                                    
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.Points}",
                                        "HorizontalAlignment": "Right",
                                        "VerticalAlignment": "Center",
                                        "Foreground" : "{WhiteText}",
                                        "TextOptionsExtern": "primaryNumber"
                                    }
                                ],
                                "Triggers" :
                                [
                                    {
                                        "Condition" : "{Standings.IsPositionJumpForDriversExists}",
                                        "Property" : "PaddingRight",
                                        "Value" : 4
                                    }
                                ]
                            }
                        },

                         //position_jump
                         {
                            "Header": "",
                            "PaddingLeft" : 0,
                            "MarginLeft" : -8,
                            "Template":
                            {
                                "BlockType" : "component",
                                "PaddingLeft" : 0,                               
                                "PaddingRight" : 12,
                                "ComponentName" : "position_jump_cell_gold"    
                            }
                        },

                        //events
                        {
                            "MarginLeft" : 24,
                            "MultiColumnHeadersSource": "{Standings.Events}",
                            "MultiColumnItemsSource": "{Item.Events}",
                            "MultiColumnHeaderTemplate": {
                                "BlockType": "stack",
                                "Orientation": "Vertical",
                                "Spacing": 4,
                                "HorizontalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType": "image",
                                        "Source": "{Item.Track.Nation.LogoPath}",
                                        "HorizontalAlignment": "Center",
                                        "Height": 42
                                    },
                                    {
                                        "BlockType": "text",
                                        "MarginBottom": 8,
                                        "FontSize": 20,
                                        "HorizontalAlignment": "Center",
                                        "Source": "{Item.Track.Nation.Code}",
                                        "Foreground": "{BlackText}"                                        
                                    }
                                ]
                            },
                            "Width": 72,
                            "Template": {
                                "Padding": "12, 0",
                                "Background": "{#FFFFFF}",
                                "BlockType": "text",
                                "Source": "{Item.RaceMajorPositionString}",
                                "HorizontalAlignment": "Left",
                               
                                    "TextOptions": {
                                    "FontName": "{FontNameDefault}",
                                    "FontSize": 34,
                                    "HorizontalAlignment": "Center",
                                    "Foreground": "{BlackText}"
                                },
                                "Triggers": [
                                    {
                                        "Condition" : "{Item.IsRaceMajorClassified, Converter=BoolReverse}",
                                        "ConditionAnd": "{RenderDNFColors}",
                                        "Setters": [
                                            {
                                                "Property": "FontSize",
                                                "Value": 22
                                            },
                                            {
                                                "Property": "Foreground",
                                                "Value": "{FerrariPrimary}"
                                            }
                                        ]
                                    },
                                     //{
                                     //   "Condition": "{Item.RaceMajorPosition, Converter=NumberLess, Parameter=11}",
                                     //   "Setters": [
                                     //       {
                                     //           "Property": "Foreground",
                                     //           "Value": "{SeasonProgressPositionTop10Foreground}"
                                     //       }
                                        //]
                                    //},
                                    // {
                                    //     "Condition": "{Item.Position, Converter=NumberLess, Parameter=4}",
                                    //     "Setters":
                                    //     [
                                    //         {
                                    //             "Property": "Foreground",
                                    //             "Value": "#DDDD55"
                                    //         }
                                    //     ]
                                    // },
                                   // {
                                     //   "Condition": "{Item.RaceMajorPosition, Converter=NumberEquals, Parameter=1}",
                                       // "Setters": [
                                      //      {
                                     //           "Property": "Foreground",
                                     //           "Value": "{SeasonProgressPositionTop1Foregound}"
                                     //       }
                                     //   ]
                                   // },
                                    {
                                        "Condition" : "{Item.RaceMajorPosition, Converter=NumberEquals, Parameter=1}",
                                        "ConditionAnd" : "{RenderP1Colors}",
                                        "Property" : "Foreground",
                                        "Value" : "{P1Foreground}"
                                    },
                                    {
                                        "Condition" : "{Item.RaceMajorPosition, Converter=NumberEquals, Parameter=2}",
                                        "ConditionAnd" : "{RenderP2Colors}",
                                        "Property" : "Foreground",
                                        "Value" : "{P2Foreground}"
                                    },
                                    {
                                        "Condition" : "{Item.RaceMajorPosition, Converter=NumberEquals, Parameter=3}",
                                        "ConditionAnd" : "{RenderP3Colors}",
                                        "Property" : "Foreground",
                                        "Value" : "{P3Foreground}"
                                    },
                                    {
                                        "Condition" : "{Item.IsRaceMajorClassified, Converter=BoolReverse}",
                                        "Setters":[ 
                                            {
                                                "Property" : "Foreground",
                                                "Value" : "{FerrariPrimary}"
                                            },
                                            {
                                                "Property" : "FontSize",
                                                "Value" : 22
                                            },
                                        ]
                                    },
                                    {
                                        "Condition" : "{Item.MajorRace.IsRaceFastestLap}",
                                        "ConditionAnd": "{RenderFLBackground}",
                                        "Property": "Background",
                                        "Value": "{FastestLapBG}"
                                    },
                                    {
                                        "Condition" : "{Item.MajorRace.IsRaceFastestLap}",
                                        "ConditionAnd": "{RenderFLBackground}",
                                        "Property": "Foreground",
                                        "Value": "{WhiteText}"
                                    },
                                ]
                                
                            }
                        }                        
                    ]
                }
            }
        ]
    }
}
