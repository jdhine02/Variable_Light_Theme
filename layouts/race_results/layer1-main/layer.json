{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",       
        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType" : "component",
                "ComponentName" : "header_block_session"
            },

            //separator
            {
                "Name" : "separator",
                "BlockType": "image",
                "MarginTop": 16,
                "MarginLeft": 4,
                "MarginRight": 4,
                "MarginBottom": 24,
                "Width": "*",
                "Source": "separator.png"
            },

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin" : "{MarginTable}",
                "TableOptions": {
                    "ItemsSource": "{Session.Drivers}",
                    "RowSpacing": 12,
                    "ColSpacing": 16,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "Columns": [
                        // position
                        {
                            "Header": "",
                            "Template": {
                                "BlockType" : "component",                                
                                "ComponentName" : "position_cell",
                                "ComponentOptions" :{
                                    "Vars" :{
                                        "position" : "{Item.PositionString}"
                                    }
                                }
                            }
                        },

                        //driver line
                        {
                            "Header": "",
                            "WidthStretch" : true,
                            "Template":
                            {
                                "BlockType" : "component",
                                "ComponentName" : "driver_line_cell"                                
                            }
                        },

                        //position_jump
                        {
                            "Header": "",
                            "Template":
                            {
                                "BlockType" : "component",
                                "ComponentName" : "position_jump_cell"    
                            }
                        },

                        //interval
                        {
                            "Header": "[Interval]",
                            "Template": {
                                "Padding": "12, 0",

                                "Background": "{#FFFFFF}",
                                "BlockType": "text",
                                "Source": "{Item.IntervalRace}",
                                "HorizontalAlignment": "Left",
                                "TextOptions": {
                                    "FontName": "{FontNameDefault}",
                                    "FontSize": 28,
                                    "Foreground": "{BlackText}",
                                    "HorizontalAlignment": "Center",
                                },
                                    "Triggers" : [ 
                                        {
                                            "Condition" : "{Item.IntervalRace, Converter=StringEquals, Parameter=DNF}",
                                            "ConditionAnd" : "{RenderDNFColors}",
                                            "Property" : "Foreground",
                                            "Value" : "{DNFText}"

                                        },
                                        {
                                            "Condition" : "{Item.IntervalRace, Converter=StringEquals, Parameter=DNS}",
                                            "ConditionAnd" : "{RenderDNFColors}",
                                            "Property" : "Foreground",
                                            "Value" : "{DNFText}"

                                        },
                                        {
                                            "Condition" : "{Item.IntervalRace, Converter=StringEquals, Parameter=DSQ}",
                                            "ConditionAnd" : "{RenderDNFColors}",
                                            "Property" : "Foreground",
                                            "Value" : "{DNFText}"

                                        }
                                    ]
                                 }
                             },
                        
                        //penalties
                        {
                            "Header": "[Pen. Time]",
                            "Template": {
                                "BlockType": "dock",
                                "Padding": "12, 0",
                                "Background": "{#FFFFFF}",
                                "Items": [
                                    {
                                        "BlockType": "stack",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Source": "{Item.PenaltyTimeStringLeftPart}",
                                                "HorizontalAlignment": "Center",
                                                "VerticalAlignment": "Center",
                                                "TextOptions": {
                                                    "FontName": "{FontNameDefault}",
                                                    "FontSize": 24,
                                                    "Foreground": "{PenaltyTimeGameForeground}",
                                                    "HorizontalAlignment": "Center"
                                                }
                                            },
                                            {
                                                "BlockType": "text",
                                                "Source": "{Item.PenaltyTimeStringRightPart}",
                                                "HorizontalAlignment": "Center",
                                                "VerticalAlignment": "Center",
                                                "TextOptions": {
                                                    "FontName": "{FontNameDefault}",
                                                    "FontSize": 24,
                                                    "Foreground": "{PenaltyTimeStewardsForeground}",
                                                    "HorizontalAlignment": "Center"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        },
                        //penaltiesPos
                        {
                            "Header": "[Pen. Pos.]",
                            "Template": {
                                "BlockType": "dock",
                                "Padding": "12, 0",
                                "Background": "{#FFFFFF}",
                                "Items": [
                                    {
                                        "BlockType": "text",
                                        "Source": "   {Item.PenaltyPosStewards,Converter=NumberZeroToEmpty}   ",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "TextOptions": {
                                                        "FontName": "{FontNameDefault}",
                                                        "FontSize": 28,
                                                        "Foreground": "{PenaltyPositionForeground}",
                                                        "HorizontalAlignment": "Center"
                                            },
                                        },                                        
                                    ]
                                },
                            },

                        //fastest lap
                        {
                            "Header": "[Fastest Lap]",
                            "Template": {
                                "BlockType": "dock",
                                "Padding": "12, 0",
                                "Background": "{#FFFFFF}",
                                "Items": [
                                    {
                                        "BlockType": "stack",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "Spacing": 8,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "Source": "{Item.FastestLapTime}",
                                                "HorizontalAlignment": "Center",
                                                "VerticalAlignment": "Center",
                                                "TextOptions": {
                                                    "FontName": "{FontNameDefault}",
                                                    "FontSize": 28,
                                                    "HorizontalAlignment": "Center",
                                                    "Foreground" : "{BlackText}",
                                                },
                                                "Triggers" : [
                                                    {
                                                        "Condition" : "{Item.IsRaceFastestLap}",
                                                        "Setters" :
                                                        [
                                                            {
                                                                "Property" : "Foreground",
                                                                "Value" : "{FastestLap}"
                                                            }
                                                        ]
                                                    },
                                                    {
                                                        "Condition" : "{Item.IntervalRace, Converter=StringEquals, Parameter=DNF}",
                                                       "Setters" :
                                                        [
                                                            {
                                                                "Property" : "Foreground",
                                                               "Value" : "{DNFText}"
                                                            }
                                                        ]
                                                   },
                                                   {
                                                    "Condition" : "{Item.IntervalRace, Converter=StringEquals, Parameter=DNS}",
                                                    "ConditionAnd" : "{RenderDNFColors}",
                                                    "Property" : "Foreground",
                                                    "Value" : "{DNFText}"
        
                                                },
                                                {
                                                    "Condition" : "{Item.IntervalRace, Converter=StringEquals, Parameter=DSQ}",
                                                    "ConditionAnd" : "{RenderDNFColors}",
                                                    "Property" : "Foreground",
                                                    "Value" : "{DNFText}"
        
                                                }
                                                    
                                                ]
                                            },
                                            {
                                                "BlockType": "image",
                                                "Source": "tyres_{Item.FastestLapTyres}.png",
                                                "HorizontalAlignment": "Center",
                                                "VerticalAlignment": "Center",
                                                "Height": 28
                                            }
                                        ]
                                    }
                                ]
                            }
                        },

                        //stints
                        {
                            "Header": "[Stints]",
                            "Template": {
                                "BlockType": "itemstack",
                                "Spacing": 4,
                                "Padding": "12, 0",
                                "Background": "{#FFFFFF}",
                                "ItemStackOptions": {
                                    "ItemSource": "{Item.Stints}",
                                    "Template": {
                                        "BlockType": "stack",
                                        "VerticalAlignment": "Center",
                                        "MarginRight" : 4,
                                        "Spacing": 3,
                                        "Items": [
                                            {
                                                "BlockType": "image",
                                                "Height": 36,
                                                "VerticalAlignment": "Center",
                                                "Source": "tyres_{Item.Tyres}.png"
                                            },
                                            {
                                                "BlockType": "text",
                                                "Source": "{Item.Laps}",
                                                "HorizontalAlignment": "Center",
                                                "VerticalAlignment": "Center",
                                                "TextOptions": {
                                                    "FontName": "{FontNameDefault}",
                                                    "FontSize": 24,
                                                    "Foreground":"{BlackText}",
                                                    "HorizontalAlignment": "Center"
                                                }
                                            }
                                            
                                        ]
                                    }
                                }
                            }
                        },

                        //points
                        {
                            "Header": "[Pts]",
                            "Template": {
                                "BlockType": "dock",
                                "Padding": "24, 0",
                                "Background": "{#FFFFFF}",
                                "HorizontalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.DriverPointsString}",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "TextOptions": {
                                            "FontName": "{FontNameDefault}",
                                            "FontSize": 32,  
                                            "Foreground": "{BlackText}",                                          
                                            "HorizontalAlignment": "Center"
                                        },

                                    

                                "Triggers" : [ 
                                    
                                    {
                                        "Condition": "{Item.IntervalRace, Converter=StringEquals, Parameter=DNF}",
                                        "ConditionAnd": "{RenderDNFColors}",
                                        "Property": "Foreground",
                                        "Value": "{DNFText}"

                                    },
                                    {
                                        "Condition": "{Item.IntervalRace, Converter=StringEquals, Parameter=DSQ}",
                                        "ConditionAnd": "{RenderDNFColors}",
                                        "Property": "Foreground",
                                        "Value": "{DNFText}"

                                    },
                                    {
                                        "Condition": "{Item.IntervalRace, Converter=StringEquals, Parameter=DNS}",
                                        "ConditionAnd": "{RenderDNFColors}",
                                        "Property": "Foreground",
                                        "Value": "{DNFText}"

                                    },
                                ]
                            }
                                ],
                            },
                        }
                    ]
                }
            },

            //footer
            {
                "BlockType" : "stack",
                "Spacing" : 500,
                "MarginTop": 50,
                "HorizontalAlignment": "Center",
                "Items" :[
                    {
                        "BlockType" : "component",
                        "Name" : "stickerFastestLap",
                        "RenderIf" : "{Session.FastestLapDriver, Converter=EmptyObjectToFalse}",
                        "ComponentOptions" :
                        {
                            "ComponentName" : "sticker_fl",
                            "Vars" :
                            {
                                "bg" : "images/fastlap_bg.png",
                                "header" : "[FASTEST LAP]",
                                "main" : "{Session.FastestLapDriver.Name}",
                                "data" : "{Session.FastestLapTime}",
                                "tyre" : "images/tyres/tyres_{Session.FastestLapTyres}.png"
                            }
                            
                        }
                    },

                    {                       
                        "BlockType" : "component",
                        "RenderIf" : "{Session.DriverDayDriver, Converter=EmptyObjectToFalse}",
                        "ComponentOptions" :
                        {
                            "ComponentName" : "sticker_dod",
                            "Vars" :
                            {
                                "bg" : "images/dod_bg.png",
                                "header" : "[DRIVER OF THE DAY]",
                                "main" : "",
                                "data" : "{Session.DriverDayDriver.Name}"
                            }
                        }
                    },

                    {
                        "BlockType" : "component",
                        "Name" : "stickerCommentator",
                        "RenderIf" : "{Streamer, Converter=EmptyObjectToFalse}",
                        "ComponentOptions" :
                        {
                            "ComponentName" : "sticker_com",
                            "Vars" :
                            {
                                "bg" : "images/commentator_bg.png",
                                "header" : "[COMMENTATOR]",
                                "streamer" : "{Streamer}",
                                "secondcomm" : "{SecondCommentator}"
                            }
                        },
                        "RenderIf": "{RenderBroadcaster}",
                    }
                ]
            }
        ]
    }
}
