{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",    
        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType" : "component",
                "ComponentName" : "header_block_session"
            },

            //separator
            {
                "Name" : "separator",
                "BlockType": "image",
                "MarginTop": 16,
                "MarginLeft": 4,
                "MarginRight": 4,
                "MarginBottom": 24,
                "Width": "*",
                "Source": "separator.png"
            },

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin" : "{MarginTable}",
                "TableOptions": {
                    "ItemsSource": "{Session.Drivers}",
                    "RowSpacing": 12,
                    "ColSpacing": 16,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "Columns": [
                        //position
                        {
                            "Header": "",
                            "Template": {
                                "BlockType" : "component",                                
                                "ComponentName" : "position_cell",
                                "ComponentOptions" :{
                                    "Vars" :{
                                        "position" : "{Item.PositionString}"
                                    }
                                }
                            }
                        },

                        //driver line
                        {
                            "Header": "",
                            "WidthStretch" : true,
                            "Template":
                            {
                                "BlockType" : "component",
                                "ComponentName" : "driver_line_cell"                                
                            }
                        },                        

                        //time
                        {
                            "Header": "[Time]",
                            "Template": {                                                               
                                "BlockType": "dock",
                                "Padding": "20, 0",                                
                                "VerticalAlignment" : "Center",
                                "HorizontalAlignment" : "Center",
                                "Background": "{#FFFFFF}",
                                "Items" :[
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.Time}",
                                        "VerticalAlignment" : "Center",
                                        "HorizontalAlignment": "Right",
                                        "TextOptions": {
                                            "FontName": "{FontNameDefault}",
                                            "FontSize": 28,
                                            "Foreground":"{BlackText}",
                                            "HorizontalAlignment": "Center"
                                        },
                                        "Triggers" : [
                                            {
                                                "Condition" : "{Item.Position, Converter=NumberEquals, Parameter=1}",
                                                "Setters" :
                                                [
                                                    {
                                                        "Property" : "Foreground",
                                                        "Value" : "{FastestLap}"
                                                    }
                                                ]
                                            },
                                            {
                                                "Condition" : "{Item.IntervalRace, Converter=StringEquals, Parameter=DSQ}",
                                                "ConditionAnd" : "{RenderDNFColors}",
                                                "Property" : "Foreground",
                                                "Value" : "{FerrariPrimary}"
                                            },
                                            {
                                                "Condition" : "{Item.IntervalRace, Converter=StringEquals, Parameter=DSQ}",
                                                "ConditionAnd" : "{RenderDNFColors}",
                                                "Property" : "Foreground",
                                                "Value" : "{FerrariPrimary}"
                                           },
                                        ]     
                                    },
                                    {
                                        "BlockType": "image",
                                        "MarginLeft" : 12,
                                        "Source": "tyres_{Item.FastestLapTyres}.png",
                                        "VerticalAlignment" : "Center",
                                        "HorizontalAlignment": "Right",
                                        "Height" : 34                                        
                                    }
                                ]                                 
                            }
                        },                                  

                        //sectors
                        {
                            "Header": "S1",
                            "Template": {
                                "BlockType": "text",                                
                                "Padding": "16, 0",
                                "MarginLeft" : 12,                                
                                "Source": "{Item.FastestLapSector1}",
                                "FontSize" : 24,
                                "Foreground":"{BlackText}",
                                "Background": "{#FFFFFF}",
                                "TextOptions" :{
                                    "HorizontalAlignment" : "Center"
                                },
                                "Triggers" : [
                                    {
                                        "Condition" : "{Item.IsOverallFastestSector1}",
                                        "Setters" :
                                        [
                                            {
                                                "Property" : "Foreground",
                                                "Value" : "{FastestLap}"
                                            }
                                        ]
                                    }
                                ]                               
                            }
                        },
                        {
                            "Header": "S2",
                            "Template": {
                                "BlockType": "text",                                
                                "Padding": "16, 0",                                                               
                                "Source": "{Item.FastestLapSector2}",
                                "FontSize" : 24,
                                "Foreground":"{BlackText}",
                                "Background": "{#FFFFFF}",
                                "TextOptions" :{
                                    "HorizontalAlignment" : "Center"
                                },
                                "Triggers" : [
                                    {
                                        "Condition" : "{Item.IsOverallFastestSector2}",
                                        "Setters" :
                                        [
                                            {
                                                "Property" : "Foreground",
                                                "Value" : "{FastestLap}"
                                            }
                                        ]
                                    }
                                ]                                 
                            }
                        },
                        {
                            "Header": "S3",
                            "Template": {
                                "BlockType": "text",                                
                                "Padding": "16, 0",                                                              
                                "Source": "{Item.FastestLapSector3}",
                                "FontSize" : 24,
                                "Background": "{#FFFFFF}",
                                "Foreground":"{BlackText}",
                                "TextOptions" :{
                                    "HorizontalAlignment" : "Center"
                                },
                                "Triggers" : [
                                    {
                                        "Condition" : "{Item.IsOverallFastestSector3}",
                                        "Setters" :
                                        [
                                            {
                                                "Property" : "Foreground",
                                                "Value" : "{FastestLap}"
                                            }
                                        ]
                                    }
                                ]                               
                            }
                        },

                        //laps
                        {
                            "Header": "[Laps]",
                            "Template": {
                                "BlockType": "dock",
                                "Padding": "16, 0",
                                "MarginLeft": 12,
                                "Background": "{#FFFFFF}",
                                "HorizontalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.LapsCount, Converter=NumberZeroToEmpty}",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "TextOptions": {
                                            "FontName": "{FontNameDefault}",
                                            "FontSize": 24,      
                                            "Foreground": "{BlackText}",                                      
                                            "HorizontalAlignment": "Center"
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            }            
        ]
    }
}
