                                                "WidthStretch": true,
                                                "Template": {
                                                    "BlockType": "component",
                                                    "Name": "statist",
                                                    "ComponentOptions": {
                                                        "ComponentName": "statistics_cell",
                                                        "Vars": {
                                                            "data": "Item.Value0",
                                                            "index" : true,
                                                            "driver" : "Item",
                                                            "battle2" : false
                                                        }
                                                    }
                                                }
                                            },
                                        
