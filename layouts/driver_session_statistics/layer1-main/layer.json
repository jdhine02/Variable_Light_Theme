                                            "HorizontalAlignment" : "Center",
                                            "TextOptions" : {
                                                "HorizontalAlignment" : "Center"
                                            }
                                        },
                                        "Columns": [
                                                 {
                                                    "Header": "",
                                                    "Template": {
                                                        "BlockType" : "component",
                                                        "ComponentName" : "driver_line_cell",
                                                        "Triggers" : [
                                                            {
                                                                "Condition" : "{Statistics.Header, Converter=StringEquals, Parameter=Top battles}",
                                                                "Property" : "RenderIf",
                                                                "Value" : "false"
                                                            }
                                                        ]
                                                    }
                                                }, 
                                                {
                                                    "Header": "",
