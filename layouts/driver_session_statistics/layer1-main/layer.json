{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "Name": "headerBlock",
                "BlockType": "dock",
                "Orientation": "Horizontal",
                "Items": [
                    //headerLeft
                    {
                        "Name": "headerLeftPart",
                        "BlockType": "stack",
                        "Orientation": "Vertical",
                        "Spacing": 12,
                        "HorizontalAlignment": "Left",
                        "Items": [
                            //league name
                            {
                                "BlockType": "stack",
                                "VerticalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType": "text",
                                        "Source": "{Season.LeagueInfo.LeagueName}",
                                        "FontName": "{FontNameWide}",
                                        "FontSize": 30,
                                        "Foreground":"{BlackText}"
                                    },
                                ]
                            },
                            {
                                "BlockType": "stack",
                                "VerticalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType": "text",
                                        "Source": "{Season.Name}",
                                        "VerticalAlignment": "Center",
                                        "FontName": "{FontNameWide}",
                                        "FontSize": 22,
                                        "Foreground": "{BlackText}"
                                    }
                                ]
                            },

                            //main header
                            {
                                "BlockType": "stack",
                                "VerticalAlignment": "Center",
                                "Spacing": 8,
                                "Items": [
                                    {
                                        "BlockType": "text",
                                        "VerticalAlignment": "Center",
                                        "Source": "{Statistics.Header}",
                                        "FontName": "{FontNameWide}",
                                        "FontSize": 28,
                                        "Foreground": "{GoldText}"
                                    },

                                    {
                                        "BlockType": "text",
                                        //"MarginLeft": 12,
                                        //"MarginTop": 2,
                                        "RenderIf": "{Statistics.SubHeader, Converter=EmptyObjectToFalse}",
                                        "VerticalAlignment": "Center",
                                        "Source": "  ·  {Statistics.SubHeader}",
                                        "FontName": "{FontNameWide}",
                                        "FontSize": 18,
                                        "Foreground": "{GoldText}"
                                    }
                                ]
                            }
                        ]
                    },

                    //headerRight
                    {
                        "Name": "headerRightPart",
                        "BlockType": "stack",
                        "MarginLeft": 56,
                        "Spacing": 12,
                        "Orientation": "Vertical",
                        "HorizontalAlignment": "Right",
                        "Items": [
                            {
                                "BlockType": "stack",
                                "Items": [
                                    {
                                        "BlockType": "stack",
                                        "Orientation": "Vertical",
                                        "Spacing": 12,
                                        "Items": [
                                            {
                                                "BlockType": "text",
                                                "HorizontalAlignment": "Right",
                                                "Source": "[Round] {Event.Position} [of] {Season.SeasonOverallNumberEvents}",
                                                "FontName": "{FontNameWide}",
                                                "FontSize": 28,
                                                "Foreground": "{BlackText}"
                                            },

                                            {
                                                "BlockType": "stack",
                                                "HorizontalAlignment": "Right",
                                                "Items": [
                                                    {
                                                        "BlockType": "text",
                                                        "Source": "[{Session.SessionType}]",
                                                        "FontName": "{FontNameWide}",
                                                        "FontSize": 24,
                                                        "Foreground": "{BlackText}"
                                                    },
                                                    //race duration
                                                    {
                                                        "BlockType": "text",
                                                        "RenderIf": false,
                                                        "Source": " • {Session.TotalLaps} [laps]",
                                                        "FontName": "{FontNameWide}",
                                                        "FontSize": 24,
                                                        "Foreground": "{BlackText}",
                                                        "Triggers": [
                                                            {
                                                                "Condition": "{Session.IsLiveData}",
                                                                "ConditionAnd": "{Session.SessionType, Converter=StringEquals, Parameter=Race}",
                                                                "Property": "RenderIf",
                                                                "Value": true
                                                            }
                                                        ]
                                                    },
                                                    //qual, practice duration
                                                    {
                                                        "BlockType": "text",
                                                        "RenderIf": false,
                                                        "Source": " • {Session.SessionDurationMinutes} [min].",
                                                        "FontName": "{FontNameWide}",
                                                        "Foreground": "{BlackText}",
                                                        "FontSize": 26,
                                                        "Triggers": [
                                                            {
                                                                "Condition": "{Session.IsLiveData}",
                                                                "ConditionAnd": "{Session.SessionType, Converter=StringNotEquals, Parameter=Race}",
                                                                "Property": "RenderIf",
                                                                "Value": true
                                                            }
                                                        ]
                                                    }
                                                ]
                                            },

                                            {
                                                "BlockType": "stack",
                                                "HorizontalAlignment": "Right",
                                                "Spacing": 12,
                                                "Items": [
                                                    {
                                                        "Name": "CountryFlag",
                                                        "BlockType": "image",
                                                        "VerticalAlignment": "Center",
                                                        "Height": 36,
                                                        "Source": "{Session.Track.Nation.LogoPath}"
                                                    },

                                                    {
                                                        "Name": "CountryName",
                                                        "BlockType": "text",
                                                        "MarginLeft": 12,
                                                        "VerticalAlignment": "Center",
                                                        "Source": "{Session.Track.Name, Converter=StringToUpperString}",
                                                        "FontName": "{FontNameWide}",
                                                        "FontSize": 22,
                                                        "Foreground": "{GoldText}"
                                                    }
                                                ]
                                            }
                                        ]
                                    },

                                    {
                                        "Name": "leagueLogo",
                                        "BlockType": "image",
                                        "Height": 82,
                                        "MarginLeft": 36,
                                        "Source": "{Season.LeagueInfo.LeagueLogo}"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },

            //separator
            {
                "Name": "separator",
                "BlockType": "image",
                "MarginTop": 16,
                "MarginLeft": 4,
                "MarginRight": 4,
                "MarginBottom": 24,
                "Width": "*",
                "Source": "separator.png"
            },

                                //table
                                {
                                    "Name": "mainTable",
                                    "BlockType": "table",
                                    "HorizontalAlignment" : "Center",
                                    "TableOptions": {
                                        "ItemsSource": "{Statistics.Drivers}",
                                        "RowSpacing": 12,
                                        //"ColSpacing": 24,
                                        //"SeparatorSpace": 12,
                                        //"GroupSpaceReduction": 12,
