{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",
        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType": "component",
                "ComponentName": "header_block_points_progress",
            },

            //separator
            {
                "Name": "separator",
                "BlockType": "image",
                "MarginTop": 16,
                "MarginLeft": 4,
                "MarginRight": 4,
                "MarginBottom": 24,
                "Width": "*",
                "Source": "separator.png"
            },

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "{MarginTable}",
                "TableOptions": {
                    "ItemsSource": "{Standings.Teams}",
                    "RowSpacing": 16,
                    "ColSpacing": 8,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "Columns": [
                        //position
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "position_cell",
                                "ComponentOptions": {
                                    "Vars": {
                                        "position": "{Item.Position}"
                                    }
                                }
                            }
                        },

                        //team line
                        {
                            "Header": "",
                            "MarginRight" : 0,
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "team_line_cell"
                            }
                        },

                         //points
                         {
                            "Header": "Points",
                            "MarginLeft" : 12,
                            "Template": {
                                
                                "BlockType": "dock",
                                "PaddingLeft" : 24,
                                "PaddingRight" : 24,
                                "Background": "{#FFFFFF}",                                
                                "Items": [                                    
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.Points}",
                                        "HorizontalAlignment": "Right",
                                        "VerticalAlignment": "Center",
                                        "Foreground" : "{BlackText}",
                                        "TextOptionsExtern": "primaryNumber"
                                    }
                                ],
                                "Triggers" :
                                [
                                    {
                                        "Condition" : "{Standings.IsPositionJumpForDriversExists}",
                                        "Property" : "PaddingRight",
                                        "Value" : 4
                                    }
                                ]
                            }
                        },

                         //position_jump
                         {
                            "Header": "",
                            "PaddingLeft" : 0,
                            "MarginLeft" : -8,
                            "Template":
                            {
                                "BlockType" : "component",
                                "PaddingLeft" : 0,                               
                                "PaddingRight" : 12,
                                "ComponentName" : "position_jump_cell"    
                            }
                        },

                        //events
                        {
                            "MarginLeft" : 24,
                            "MultiColumnHeadersSource": "{Standings.Events}",
                            "MultiColumnItemsSource": "{Item.Events}",
                            "MultiColumnHeaderTemplate": {
                                "BlockType": "stack",
                                "Orientation": "Vertical",
                                "Spacing": 4,
                                "HorizontalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType": "image",
                                        "Source": "{Item.Track.Nation.LogoPath}",
                                        "HorizontalAlignment": "Center",
                                        "Height": 42
                                    },
                                    {
                                        "BlockType": "text",
                                        "MarginBottom": 8,
                                        "FontSize": 20,
                                        "HorizontalAlignment": "Center",
                                        "Source": "{Item.Track.Nation.Code}",
                                        "Foreground": "{BlackText}"

                                    }
                                ]
                            },
                            "Width": 72,
                            "Template": {
                                "Padding": "12, 0",
                                "Background": "{#FFFFFF}",
                                "BlockType": "text",
                                "Source": "{Item.PointsString}",
                                "HorizontalAlignment": "Left",
                                "TextOptions": {
                                    "FontName": "{FontNameDefault}",
                                    "FontSize": 34,
                                    "HorizontalAlignment": "Center",
                                    "Foreground": "{BlackText}"
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{Item.PointsString, Converter=StringEquals, Parameter=0}",
                                        "Setters": [
                                            {
                                                "Property": "Source",
                                                "Value": ""
                                            }
                                        ]
                                    },
                                    //{
                                    //    "Condition": "{Item.Points, Converter=NumberGreater, Parameter=149}",
                                    //    "Setters":
                                    //    [
                                    //        {
                                     //           "Property": "Foreground",
                                     //           "Value": "{SeasonProgressPointsTopForeground}"
                                     //       }
                                     //   ]
                                    //},
                                    {
                                        "Condition" : "{Item.RaceMajorPosition, Converter=NumberEquals, Parameter= 1}",
                                        "Setters" :
                                        [
                                            {
                                                "Property" : "Foreground",
                                                "Value" : "{P1Foreground}"
                                            }
                                        ]
                                    },
                                    {
                                        "Condition" : "{Item.RaceMajorPosition, Converter=NumberEquals, Parameter= 2}",
                                        "Setters" :
                                        [
                                            {
                                                "Property" : "Foreground",
                                                "Value" : "{P2Foreground}"
                                            }
                                        ]
                                    },
                                    {
                                        "Condition" : "{Item.RaceMajorPosition, Converter=NumberEquals, Parameter= 3}",
                                        "Setters" :
                                        [
                                            {
                                                "Property" : "Foreground",
                                                "Value" : "{P3Foreground}"
                                            }
                                        ]
                                    },
                                    {
                                        "Condition": "{Item.MajorRace.IsRaceFastestLap}",
                                        "Setters": [
                                            {
                                                "Property": "Background",
                                                "Value": "FastestLap"
                                            }
                                        ]
                                    },
                                    {
                                        "Condition": "{Item.MajorRace.IsRaceFastestLap}",
                                        "Setters": [
                                            {
                                                "Property": "Foreground",
                                                "Value": "{WhiteText}"
                                            }
                                        ]
                                    },
                                    {
                                        "Condition": "{Item.MajorQual.Position, Converter=NumberEquals, Parameter=1}",
                                        "Setters":
                                        [
                                            {
                                                "Property": "FontName",
                                                "Value": "Formula1-Bold"
                                            }
                                        ]
                                    }
                                ]
                            }
                        }                        
                    ]
                }
            }
        ]
    }
}
